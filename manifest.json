{
	"manifest_version": 3,
	"name": "audio denoise",
	"version": "1.0",
	"description": "remove noise in audio in real time!",
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"desktopCapture",
		"scripting"
    ],
	"icons": {
		"16": "logo/logo16.png",
		"32": "logo/logo32.png",
		"64": "logo/logo64.png",
		"128": "logo/logo128.png"
	},
	"background": {
		"service_worker": "background.js"	
	},
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"run_at": "document_end",
			"js": ["content.js"]
		}
	],
	 "web_accessible_resources": [{
		"resources": ["denoise_lib/random-noise-processor.js"],
		"matches": ["https://*/*", "http://*/*"]
	 }
    	
  	],
	"action": {
		"default_title": "Audio Denoise",
		"default_popup": "popup.html"
	}
}
